# Path to oh-my-zsh installation
export ZSH=~/.oh-my-zsh

# Aliases
alias vim="nvim"
alias dot="cd ~/.dotfiles/"
alias ws="cd ~/Workspace/"
alias ql="cd ~/Quicklinks/"
alias doc="cd ~/Documents/"

# Theme Settings
ZSH_THEME="robbyrussell"
DEFAULT_USER="jcanseco" # remove username from status

# Plugin Settings (must go before sourcing oh-my-zsh.sh)
plugins=(git tmux)
ZSH_TMUX_AUTOSTART="true" # Launch tmux at terminal startup

# Load the oh-my-zsh script
source $ZSH/oh-my-zsh.sh
