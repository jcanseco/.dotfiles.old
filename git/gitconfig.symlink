[user]
    name = Jazel Canseco
    email = jazel.canseco@gmail.com
[push]
    default = simple
[color]
    ui = true
[alias]
    # Show a list of git aliases currently set up
    alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ / | less

    # Show commit tree for current branch
    lol = log --pretty=oneline --abbrev-commit --graph --decorate

    # Show whole commit tree
    lola = log --pretty=oneline --abbrev-commit --graph --decorate --all

    # git pushnew <branchname>; push untracked local branch to remote
    pushnew = push --set-upstream origin

    # git pushdel <branchname>; delete branch from remote
    pushdel = push --delete origin # delete branch from remote

    # git cof <file.txt>; reset a particular file back to HEAD
    cof = checkout --

    # Show changes made in the last few commits
    c1 = show HEAD --format=format:%b
    c2 = show HEAD~1 --format=format:%b
    c3 = show HEAD~2 --format=format:%b

    # Basic aliases
    st = status
    df = diff HEAD
    a = add
    aa = add -A
    ci = commit
    cim = commit -m
    amd = commit --amend
    br = branch
    co = checkout
    cob = checkout -b
    f = fetch
    pr = pull --rebase
    cp = cherry-pick
    cpa = cherry-pick --abort
    rb = rebase
    rbi = rebase -i
    rh = ! bash ~/.dotfiles/scripts/git-reset-hard.sh
[core]
    editor = vim
[advice]
    # Disable "how to stage/unstage/add" hints given by git status
    statusHints = false
